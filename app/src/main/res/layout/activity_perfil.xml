<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jorwys.project.blablaphone.Perfil"
    android:background="@color/PrimaryColor">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="226dp"
        android:id="@+id/imageView3"
        android:visibility="visible"
        android:background="@color/PrimaryColor"/>

<include layout="@layout/toolbar"
    android:id="@+id/mtb"

    />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="226dp"
    android:id="@+id/otrotb"
    android:orientation="vertical"
    android:background="#99FB9131"
    android:layout_alignParentBottom="false">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/perfil"
        android:layout_gravity="center_horizontal"
        app:border_width="2dp"
        app:border_color="@color/AccentColor"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="56dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Apellido"
        android:id="@+id/nombretb"
        android:textSize="22sp"
        android:textColor="@color/AccentColor"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num"
        android:id="@+id/numerotb"
        android:textSize="18sp"
        android:textColor="@color/AccentColor"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/otrotb"
        android:layout_centerHorizontal="true"
        android:background="@color/AccentColor"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status"
            android:id="@+id/textView7"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="10dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            app:border_width="2dp"
            app:border_color="#ff09ce00"
            android:layout_gravity="center_vertical"
            android:src="#ff00ff4e"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView12"
            android:layout_toStartOf="@+id/textView12"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Online"
            android:id="@+id/textView12"
            android:paddingLeft="0dp"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/AccentColor"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Saldo"
            android:id="@+id/textView8"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Saldo"
            android:id="@+id/textView6"
            android:layout_gravity="center_vertical"
            android:paddingLeft="0dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/AccentColor"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Llamadas"
            android:id="@+id/textView9"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/AccentColor"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mi cuenta"
            android:id="@+id/textView10"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/AccentColor"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ajustes"
            android:id="@+id/textView11"
            android:layout_gravity="center_vertical"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>




</RelativeLayout>
